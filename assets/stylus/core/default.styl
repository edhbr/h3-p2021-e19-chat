.scrollbar-track
  border-radius 5px
//   @media screen and (max-width: mobile)
//     display none !important

.scrollbar-track-x
  display none !important

// transitions
.fade-enter-active, .fade-leave-active
  transition opacity .3s ease
  opacity 1
  will-change opacity

.fade-enter, .fade-leave-to
  opacity 0
